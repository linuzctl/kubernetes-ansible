{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>linuzctl/kubernetes-ansible//.github/renovate/commitMessage.json5',
    'github>linuzctl/kubernetes-ansible//.github/renovate/semanticCommits.json5',
  ],
  semanticCommits: 'enabled',
  dependencyDashboard: true,
  separateMajorMinor: true,
  timezone: 'Europe/Zurich',
  assignees: [
    'linuzctl',
  ],
  prConcurrentLimit: 0,
  prHourlyLimit: 0,
  customManagers: [
    {
      description: 'Process variable dependencies',
      customType: 'regex',
      managerFilePatterns: [
        '/(^|/)defaults/[^/]+\\.ya?ml$/',
        '/(^|/)inventory/.+\\.ya?ml$/',
      ],
      matchStrings: [
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s.*version:\\s*\"?(?<currentValue>[^\r\n"]+)\"?',
        'datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s.*tag:\\s*\"?(?<currentValue>[^\r\n"]+)\"?',
      ],
      datasourceTemplate: '{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}',
      versioningTemplate: '{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}',
    },
  ],
  'pre-commit': {
    enabled: true,
  },
}
